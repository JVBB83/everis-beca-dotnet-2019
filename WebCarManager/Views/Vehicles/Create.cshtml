@using CarManagement.Core.Models
@model CarManagement.Core.Models.DTOs.VehicleDto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Vehicles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>VehicleDto</h4>
    <hr />
    <div>
        Color:
        @Html.DropDownListFor(Model => Model.Color, new SelectList(Enum.GetValues(typeof(CarColor))))
    </div>
    <hr />
    <div>
        Engine:
        Horse Power: @Html.TextBoxFor(Model => Model.Engine.HorsePower)
        IsStarted: @Html.CheckBoxFor(Model => Model.Engine.IsStarted)
    </div>

    Wheels: @Html.TextBox("WheelCount")

    Doors: @Html.TextBox("DoorCount")

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

