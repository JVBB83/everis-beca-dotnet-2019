@using CarManagement.Core.Models.DTOs
@using CarManagement.Core.Models
@model CarManagement.Core.Models.DTOs.VehicleDto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Vehicles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>VehicleDto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(Model => Model, "Vehicle")
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new {
                   serial = this.Model.Enrollment.Serial,
                   number = this.Model.Enrollment.Number }) |
    @Html.ActionLink("Back to List", "Index")
</div>


