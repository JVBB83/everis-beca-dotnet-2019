@using CarManagement.Core.Models.DTOs
@model IEnumerable<CarManagement.Core.Models.DTOs.VehicleDto>

@{
    ViewBag.Title = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Enrollment</th>
        <th>Actions</th>
    </tr>

    @foreach (VehicleDto vehicle in this.Model)
    {
        <tr>
            <td>@Html.ActionLink("🚘 " + vehicle.Enrollment.Serial + "-" + vehicle.Enrollment.Number.ToString("0000"), "Details", new {
                   serial = vehicle.Enrollment.Serial,
                   number = vehicle.Enrollment.Number })</td>
            <td>
                @Html.ActionLink("📝 Edit", "Edit", new {
                   serial = vehicle.Enrollment.Serial,
                   number = vehicle.Enrollment.Number }) |
                @Html.ActionLink("🗑️ Delete", "Delete", new{
                   serial = vehicle.Enrollment.Serial,
                   number = vehicle.Enrollment.Number })
            </td>
        </tr>
    }

</table>
